<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>

<div class="container">

    <div class="card text-white bg-dark" style="max-width: 800px;margin: auto;">
        <div class="card-header">
            <h2 class="text-center my-2"><i class="fas fa-pen"></i> Editar Admin</h2>
        </div>

        <div class="card-body">
            <form action="/admin/alterar" method="post">

                <input type="hidden" name="id" value="<%= admin.id %>">

                <label for="email" class="form-label">
                    <h4><i class="fas fa-envelope"></i> Email do Admin</h4>
                </label>
                <input value="<%= admin.email %>" type="email" name="email" placeholder="Digite o email o Admin" class="form-control">
                <p class="text-danger"><%= emailErro %> </p>

                <div class="row">
                    <div class="col-6">
                        <label for="nome" class="form-label mt-3">
                            <h4><i class="fas fa-signature"></i> Nome do Admin</h4>
                        </label>
                        <input value="<%= admin.nome %>"  type="text" name="nome" placeholder="Informe o nome do Admin" class="form-control">
                        <p class="text-danger"><%= nomeErro %> </p>

                    </div>
                   

                <div class="text-center mt-5">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check-circle"></i>
                        Alterar
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

<%- include ('../../partials/footer.ejs') %>