<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>

<div class="container">

    <div class="card text-white bg-dark" style="max-width: 800px;margin: auto;">
        <div class="card-header">
            <h2 class="text-center my-2"><i class="fas fa-folder-plus"></i> Criar Editora</h2>
        </div>
        
        <div class="card-body">
            <form action="/editoras/salvar" method="post">

                <label for="nome" class="form-label">
                    <h4><i class="fas fa-newspaper"></i> Nome da Editora:</h4>
                </label>
                <input type="text" name="nome" placeholder="Digite o nome da editora" class="form-control" >
                
                   <p class="text-danger mt-1"><%= nomeErro %> </p>

                <label for="cidade" class="form-label mt-3">
                    <h4><i class="fas fa-city"></i> Cidade da Editora:</h4>
                </label>
                <input type="text" name="cidade" placeholder="informe a cidade da editora" class="form-control" >

                    <p class="text-danger mt-1"><%= cidadeErro %></p>

                <div class="text-center mt-5">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check-circle"></i>
                        Criar
                    </button>    
                </div>

            </form>
        </div>
    </div>
</div>

<%- include ('../../partials/footer.ejs') %>