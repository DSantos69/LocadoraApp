<%- include ('partials/header.ejs') %>
<%- include ('partials/navbarHome.ejs') %>

<section class="pt-3 pb-5">
    <div class="container">
      <div class="row d-flex  justify-content-between align-items-top text-center">
        <div class="col-md-5 d-md-flex flex-column align-content-center align-items-center text-white">
          <h2 class="mb-2 mt-5 fw-bold">Seja Bem Vindo</h2>
          <p class="">Faça o login para continuar</p>
          <img src="/img/livro.png" class="img-fluid" alt="livro_logo" style="max-width: 300px;">
        </div>
        
        <div class="col-md-6">
          <div class="card shadow-lg text-start h-100 bg-dark text-white">
            <div class="card-header">
                <h2 class="text-center text-bold"><i class="fas fa-user"></i> Login</h2>
            </div>
            <div class="card-body">
              <form action="/autenticar" method="POST">
                <div class="form-group mt-2">
                  <label for="email"><i class="fas fa-envelope"></i> Seu Email</label>
                  <input name="email" type="email" class="form-control mt-2" placeholder="Digite seu email">
                  <small class="form-text text-muted">Nós não iremos compartilhar
                      seu email com ninguém.</small>
                </div>
                <div class="form-group  mt-2">
                  <label for="senha"><i class="fas fa-key"></i> Sua Senha</label>
                  <input class="form-control mt-2" placeholder="Digite sua Senha" type="password" name="senha">
                  <small class="form-text text-muted">Nós não iremos compartilhar
                    sua senha com ninguém.</small>
                </div>
                
                <button type="submit"
                  class="btn w-100 btn-lg mt-3 btn-primary">
                  <i class="fas fa-sign-in-alt"></i>
                  Logar
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
</section>



<%- include ('partials/footer.ejs') %>